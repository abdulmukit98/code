#include<bits/stdc++.h>
using namespace std;
int main()
{
    /** pyramid 3

    ..*..
    .***.
    *****

    */

    printf("Pyramid 3\nEnter n: ");
    int n; scanf("%d",&n);

    for(int i = 1; i<=n; i++)
    {
        for(int j = 1; j <= n-i; j++)
            printf(".");

        for(int j = 1; j <= 2*i-1; j++)
            printf("*");

        for(int j = 1; j <= n-i; j++)
            printf(".");

        printf("\n");
    }

}
